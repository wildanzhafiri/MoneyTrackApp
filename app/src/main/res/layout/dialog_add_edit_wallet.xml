<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_wallet"
        android:textColor="@color/purple_700"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/et_wallet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" android:hint="@string/wallet_name"
        android:inputType="textCapWords"
        android:maxLines="1"
        android:background="@drawable/bg_input" android:paddingHorizontal="12dp" android:textColor="@android:color/black" android:layout_marginBottom="12dp"/>

    <EditText
        android:id="@+id/et_wallet_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" android:hint="@string/amount_hint"
        android:inputType="numberDecimal"
        android:maxLines="1"
        android:background="@drawable/bg_input" android:paddingHorizontal="12dp" android:textColor="@android:color/black" android:layout_marginBottom="12dp"/>

    <Spinner
        android:id="@+id/spinner_wallet_categories" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp" android:background="@drawable/bg_spinner"
        android:paddingHorizontal="4dp"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:background="@drawable/rounded_red_button"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="36dp"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/btn_save"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_orange_button"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:minHeight="36dp" />
    </LinearLayout>

</LinearLayout>