<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".TransactionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Semua isi layout dimasukkan ke dalam LinearLayout ini -->

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0C1E5B"
            android:title="Transaction Report"
            android:titleTextColor="@android:color/white"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

        <Button
            android:id="@+id/filter"
            android:layout_width="127dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="All"
            android:backgroundTint="#F7A93B" />

        <TextView
            android:id="@+id/expenseMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="Expense per Month"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/expenseGraph"
            android:layout_width="match_parent"
            android:layout_height="204dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/group35" />

        <TextView
            android:id="@+id/incomseMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Income per Month"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/incomeGraph"
            android:layout_width="match_parent"
            android:layout_height="201dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="20dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/group37" />

        <TextView
            android:id="@+id/transactionHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Transaction History"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/transactionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:background="@drawable/transaction_container"
            android:elevation="6dp"
            android:layout_marginBottom="16dp">

            <!-- Judul dan tombol All -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/btnAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:drawablePadding="4dp"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp" />
            </RelativeLayout>

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/transactionRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"/>

            <!-- Pagination tombol -->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/paginationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pagination_bg"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="6dp"
                    android:layout_marginBottom="8dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnPrev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&lt;"
                        android:textColor="@android:color/white"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Akan diisi tombol 1 - 6 di Java -->

                    <TextView
                        android:id="@+id/btnNext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&gt;"
                        android:textColor="@android:color/white"
                        android:padding="6dp"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
